<?xml version="1.0" encoding="MacRoman"?>
<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>terrastore-${project.version}-dist</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>terrastore-server/libs</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <outputDirectory></outputDirectory>
            <source>src/dist/terrastore-install.xml</source>
            <filtered>true</filtered>
        </file>
        <file>
            <outputDirectory>ant</outputDirectory>
            <source>src/dist/ant-contrib.jar</source>
        </file>
        <file>
            <outputDirectory></outputDirectory>
            <source>terrastore_license.txt</source>
        </file>
        <file>
            <outputDirectory></outputDirectory>
            <source>terracotta_license.txt</source>
        </file>
        <file>
            <outputDirectory></outputDirectory>
            <source>README.txt</source>
        </file>
        <file>
            <outputDirectory>terrastore-master</outputDirectory>
            <source>src/dist/master/terracotta-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-master</outputDirectory>
            <source>src/dist/master/terracotta-config-ha.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-master</outputDirectory>
            <source>src/dist/terrastore-master.zip</source>
        </file>
        <file>
        	<outputDirectory>terrastore-server</outputDirectory>
        	<source>src/dist/server/aggregators-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/comparators-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/conditions-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/functions-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/events-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/terrastore-config.xml</source>
        </file>
        <file>
            <outputDirectory>terrastore-server</outputDirectory>
            <source>src/dist/server/terrastore-logback.xml</source>
            <filtered>true</filtered>
        </file>
        <file>
            <outputDirectory>terrastore-server/bin</outputDirectory>
            <source>src/dist/server/start.sh</source>
        </file>
        <file>
            <outputDirectory>terrastore-server/backups</outputDirectory>
            <source>src/dist/server/backups/README.txt</source>
        </file>
        <file>
            <outputDirectory>terrastore-server/javascript</outputDirectory>
            <source>src/dist/server/javascript/README.txt</source>
        </file>
        <file>
            <outputDirectory>terrastore-server/extensions</outputDirectory>
            <source>src/dist/server/extensions/README.txt</source>
        </file>
        <file>
            <outputDirectory>terrastore-server/snapshots</outputDirectory>
            <source>src/dist/server/snapshots/README.txt</source>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory>terrastore-api</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>terrastore-${project.version}-api.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>terrastore-server/libs</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>terrastore-${project.version}.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
